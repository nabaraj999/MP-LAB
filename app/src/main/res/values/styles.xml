<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="NumBtn">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_rowWeight">0.9</item>
        <item name="android:layout_margin">6dp</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@drawable/bg_number</item>
    </style>

    <style name="OpBtn">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_rowWeight">1.2</item>
        <item name="android:layout_margin">6dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@drawable/bg_operator</item>
    </style>

    <style name="EqualBtn" parent="OpBtn">
        <item name="android:background">@drawable/bg_equal</item>
    </style>

</resources>
